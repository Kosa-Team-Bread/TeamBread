<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #ffffff;" stylesheets="@CouponPopup.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.couponCtrl.CouponApplyPopupController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" styleClass="title-label" text="상품 정보 및 쿠폰 적용" />
      
      <!-- 상품 기본 정보 표시 영역 -->
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label style="-fx-font-weight: bold;" text="판매가격" />
            <Label fx:id="priceLabel" text="-" GridPane.columnIndex="1" />
            <Label style="-fx-font-weight: bold;" text="원가" GridPane.rowIndex="1" />
            <Label fx:id="costLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      
      
      <!-- 손익분기점 차트 -->
      <BarChart fx:id="bepChart" animated="false" title="할인율별 손익분기점">
        <xAxis>
          <CategoryAxis fx:id="xAxis" label="할인율(%)" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" label="금액(원)" side="LEFT" />
        </yAxis>
      </BarChart>
      
      <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleCloseButtonAction" prefWidth="100.0" text="닫기" VBox.vgrow="NEVER" />
   </children>
</VBox>