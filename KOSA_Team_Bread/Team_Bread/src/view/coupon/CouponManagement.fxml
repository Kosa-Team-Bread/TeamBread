<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 1. VBox의 모든 고정 크기 속성 제거 -->
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CouponController">
   <children>
      <!-- 2. TabPane의 고정 크기 제거, VBox.vgrow="ALWAYS" 추가하여 부모를 따라 세로로 늘어나도록 설정 -->
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <!-- 쿠폰 관리 탭 -->
          <Tab text="쿠폰관리">
            <content>
              <AnchorPane>
                     <children>
                        <!-- 검색 필드와 레이블은 상단 고정 -->
                        <Label layoutX="30.0" layoutY="30.0" text="쿠폰 목록">
                           <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <TextField fx:id="couponSearchField" promptText="쿠폰명 검색" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0" />
                        
                        <!-- 3. TableView의 layoutX/Y 및 고정 크기 제거, AnchorPane 앵커로 유동적인 크기 설정 -->
                        <TableView fx:id="couponTable" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="80.0">
                          <columns>
                            <TableColumn fx:id="couponNameCol" prefWidth="250.0" text="쿠폰명" />
                            <TableColumn fx:id="percentCol" prefWidth="100.0" style="-fx-alignment: CENTER;" text="할인율(%)" />
                            <TableColumn fx:id="startTimeCol" prefWidth="240.0" style="-fx-alignment: CENTER;" text="쿠폰 할인 시작 시간" />
                            <TableColumn fx:id="deadlineCol" prefWidth="240.0" style="-fx-alignment: CENTER;" text="쿠폰 할인 종료 시간" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          
          <!-- 쿠폰 적용 탭 -->
          <Tab text="쿠폰적용">
            <content>
              <AnchorPane>
                     <children>
                        <Label layoutX="30.0" layoutY="30.0" text="상품 목록 (상품 더블 클릭 시 쿠폰 적용)">
                           <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <TextField fx:id="productSearchField" promptText="상품명 검색" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0" />
                        
                        <!-- 4. [수정] 여기 TableView도 동일하게 앵커 설정 -->
                        <TableView fx:id="productTable" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="80.0">
                          <columns>
                            <TableColumn fx:id="productNameCol" prefWidth="430.0" text="상품명" />
                            <TableColumn fx:id="priceCol" prefWidth="200.0" style="-fx-alignment: CENTER_RIGHT;" text="판매가격" />
                            <TableColumn fx:id="costCol" prefWidth="200.0" style="-fx-alignment: CENTER_RIGHT;" text="원가" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>