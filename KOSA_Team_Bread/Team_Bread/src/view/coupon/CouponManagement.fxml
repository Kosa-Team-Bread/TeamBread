<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.coupon.CouponController">
   <children>
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <!-- 쿠폰 목록 탭 -->
          <Tab text="쿠폰 목록">
            <content>
              <AnchorPane>
                     <children>
                        <Label styleClass="title-label" text="쿠폰 목록" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0" />
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
                           <children>
                              <ComboBox fx:id="couponCategoryFilter" prefWidth="150.0" promptText="카테고리 선택" />
                              <TextField fx:id="couponSearchField" prefWidth="200.0" promptText="쿠폰명 검색" />
                           </children>
                        </HBox>
                        
                        <!-- 쿠폰 추가/수정/삭제 버튼을 담을 HBox를 테이블 위에 추가 -->
                        <HBox spacing="10.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="80.0">
                           <children>
                              <Button fx:id="addCouponBtn" onAction="#handleAddAction" text="쿠폰 추가" />
                              <Button fx:id="editCouponBtn" onAction="#handleEditAction" text="쿠폰 수정" />
                              <Button fx:id="deleteCouponBtn" onAction="#handleDeleteAction" text="쿠폰 삭제" />
                           </children>
                        </HBox>
                        
                        <!-- 테이블의 topAnchor를 버튼 HBox 아래로 조정 -->
                        <TableView fx:id="couponTable" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="120.0">
                          <columns>
                            <TableColumn fx:id="couponNameCol" prefWidth="250.0" text="쿠폰명" />
                            <TableColumn fx:id="percentCol" prefWidth="100.0" style="-fx-alignment: CENTER;" text="할인율(%)" />
                            <TableColumn fx:id="startTimeCol" prefWidth="200.0" style="-fx-alignment: CENTER;" text="쿠폰 할인 시작 시간" />
                            <TableColumn fx:id="deadlineCol" prefWidth="200.0" style="-fx-alignment: CENTER;" text="쿠폰 할인 종료 시간" />
                            <TableColumn fx:id="couponCategoryCol" prefWidth="150.0" style="-fx-alignment: CENTER;" text="카테고리" />
                          </columns>
                           <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          
          <!-- 쿠폰 적용 탭 -->
          <Tab text="쿠폰 적용">
            <content>
              <AnchorPane>
                     <children>
                        <Label styleClass="title-label" text="상품 목록 (상품 더블 클릭 시 쿠폰 적용)" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0" />
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
                           <children>
                              <ComboBox fx:id="productCategoryFilter" prefWidth="150.0" promptText="카테고리 선택" />
                              <TextField fx:id="productSearchField" prefWidth="200.0" promptText="상품명 검색" />
                           </children>
                        </HBox>
                        
                        <TableView fx:id="productTable" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="80.0">
                          <columns>
                            <TableColumn fx:id="productNameCol" prefWidth="380.0" text="상품명" />
                            <TableColumn fx:id="priceCol" prefWidth="150.0" style="-fx-alignment: CENTER_RIGHT;" text="판매가격" />
                            <TableColumn fx:id="costCol" prefWidth="150.0" style="-fx-alignment: CENTER_RIGHT;" text="원가" />
                            <TableColumn fx:id="productCategoryCol" prefWidth="150.0" style="-fx-alignment: CENTER;" text="카테고리" />
                          </columns>
                           <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>