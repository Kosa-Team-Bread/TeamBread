<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.mypage.MyPageController">
   <top>
      <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #f8fafc;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            
            <!-- Add Member Form (Initially hidden) -->
            <VBox fx:id="addMemberForm" managed="false" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1); -fx-border-color: #e5e7eb; -fx-border-radius: 8;" visible="false">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="새 멤버 추가" />
                  <GridPane hgap="15.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                     <children>
                        
                        <VBox spacing="5.0" GridPane.columnIndex="0">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #374151;" text="이메일" />
                              <TextField fx:id="newEmailField" promptText="admin@example.com" style="-fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-padding: 8 12 8 12; -fx-font-size: 14px;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" GridPane.columnIndex="1">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #374151;" text="관리자명" />
                              <TextField fx:id="newAdminNameField" promptText="관리자명" style="-fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-padding: 8 12 8 12; -fx-font-size: 14px;" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" GridPane.columnIndex="2">
                           <children>
                              <Label style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #374151;" text="등급" />
                              <TextField fx:id="newGradeField" promptText="등급" style="-fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-padding: 8 12 8 12; -fx-font-size: 14px;" />
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
                  
               </children>
            </VBox>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../main/logo.png" />
               </image>
            </ImageView>
            
            <!-- Header -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1); -fx-border-color: #e5e7eb; -fx-border-radius: 8;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label style="-fx-font-size: 20px;" />
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" text="관리자 멤버 관리" />
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                           <children>
                              <Label fx:id="currentUserLabel" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" text="현재 사용자: " />
                              <Label fx:id="currentUserGradeLabel" style="-fx-font-size: 12px; -fx-background-color: #dbeafe; -fx-text-fill: #2563eb; -fx-background-radius: 15; -fx-padding: 4 8 4 8;" />
                              <Button fx:id="modifyUserBtn" onAction="#onModifyUser" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px; -fx-padding: 8 16 8 16;" text="개인정보 수정" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="0.0" style="-fx-background-color: #f8fafc;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
         </padding>
         <children>
            
            <!-- Table Container -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1); -fx-border-color: #e5e7eb; -fx-border-radius: 8;">
               <children>
                  
                  <!-- Table Header -->
                  <HBox style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0; -fx-background-radius: 8 8 0 0;">
                     <padding>
                        <Insets bottom="16.0" left="24.0" right="24.0" top="16.0" />
                     </padding>
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1f2937;" text="멤버 목록" />
                     </children>
                  </HBox>
                  
                  <!-- Table -->
                  <TableView fx:id="adminTableView" prefHeight="411.0" prefWidth="921.0" style="-fx-background-color: white; -fx-border-color: transparent;">
                     <columns>
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" style="-fx-font-size: 12px; -fx-font-weight: 500; -fx-text-fill: #6b7280;" text="이메일">
                           <cellValueFactory>
                              <PropertyValueFactory property="email" />
                           </cellValueFactory>
                        </TableColumn>
                        
                        <TableColumn fx:id="adminNameColumn" prefWidth="150.0" style="-fx-font-size: 12px; -fx-font-weight: 500; -fx-text-fill: #6b7280;" text="관리자명">
                           <cellValueFactory>
                              <PropertyValueFactory property="adminName" />
                           </cellValueFactory>
                        </TableColumn>
                        
                        <TableColumn fx:id="gradeColumn" prefWidth="120.0" style="-fx-font-size: 12px; -fx-font-weight: 500; -fx-text-fill: #6b7280;" text="등급">
                           <cellValueFactory>
                              <PropertyValueFactory property="grade" />
                           </cellValueFactory>
                        </TableColumn>
                        
                        <TableColumn fx:id="regDateColumn" prefWidth="120.0" style="-fx-font-size: 12px; -fx-font-weight: 500; -fx-text-fill: #6b7280;" text="등록일">
                           <cellValueFactory>
                              <PropertyValueFactory property="adminRegDate" />
                           </cellValueFactory>
                        </TableColumn>
                        
                        <TableColumn fx:id="modDateColumn" prefWidth="120.0" style="-fx-font-size: 12px; -fx-font-weight: 500; -fx-text-fill: #6b7280;" text="수정일">
                           <cellValueFactory>
                              <PropertyValueFactory property="adminModDate" />
                           </cellValueFactory>
                        </TableColumn>
                        
                        <TableColumn fx:id="actionsColumn" prefWidth="120.0" style="-fx-font-size: 12px; -fx-font-weight: 500; -fx-text-fill: #6b7280;" text="작업">
                           <!-- cellFactory는 Controller에서 설정 -->
                           <!--  <cellValue>
                              <Button fx:id="modifyRoleBtn" onAction="#onModifyRole" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-size: 14px; -fx-padding: 8 16 8 16;" text="등급 변경" />                          
                           </cellValue> -->
                        </TableColumn>
                        

                     </columns>
                     
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
