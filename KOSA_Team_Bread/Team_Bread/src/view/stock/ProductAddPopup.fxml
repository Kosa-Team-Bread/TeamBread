<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="500.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controller.stock.ProductAddPopupController">
    <padding>
        <Insets bottom="10" left="20" right="20" top="10" />
    </padding>
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../main/logo.png" />
         </image>
      </ImageView>
   
       <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="상품 추가" />
   
       <TextField fx:id="nameField" promptText="제품명" style="-fx-padding: 12px; -fx-border-color: #dddddd; -fx-border-radius: 4px; -fx-background-color: #f8f9fa; -fx-background-radius: 4px; -fx-font-size: 14px;" />
       <TextField fx:id="priceField" promptText="판매가" style="-fx-padding: 12px; -fx-border-color: #dddddd; -fx-border-radius: 4px; -fx-background-color: #f8f9fa; -fx-background-radius: 4px; -fx-font-size: 14px;" />
       <TextField fx:id="costField" promptText="원가" style="-fx-padding: 12px; -fx-border-color: #dddddd; -fx-border-radius: 4px; -fx-background-color: #f8f9fa; -fx-background-radius: 4px; -fx-font-size: 14px;" />
       <TextField fx:id="quantityField" promptText="수량" style="-fx-padding: 12px; -fx-border-color: #dddddd; -fx-border-radius: 4px; -fx-background-color: #f8f9fa; -fx-background-radius: 4px; -fx-font-size: 14px;" />
       <TextField fx:id="locationField" promptText="저장위치" style="-fx-padding: 12px; -fx-border-color: #dddddd; -fx-border-radius: 4px; -fx-background-color: #f8f9fa; -fx-background-radius: 4px; -fx-font-size: 14px;" />
   
       <ComboBox fx:id="categoryComboBox" promptText="카테고리" />
   
       <HBox alignment="CENTER" spacing="10">
      <children>
              <Button onAction="#handleImageAdd" prefHeight="45.0" prefWidth="130.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 4px; -fx-font-size: 16px; -fx-font-weight: bold;" text="이미지 추가" />
              <Label fx:id="imageFileNameLabel" text="선택된 파일 없음" />
      </children>
       </HBox>
   
       <Button onAction="#handleRegister" prefHeight="45.0" prefWidth="130.0" style="-fx-background-color: #4285f4; -fx-text-fill: white; -fx-background-radius: 4px; -fx-font-size: 16px; -fx-font-weight: bold;" text="등록" />
   </children>

</VBox>
