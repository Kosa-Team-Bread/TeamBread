<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controller.ProductDetailPopupController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <children>
   
       <ImageView fx:id="productImageView" fitHeight="200" fitWidth="200" preserveRatio="true" />
   
       <HBox alignment="CENTER_LEFT" spacing="5">
      <children>
              <Label style="-fx-font-weight: bold;" text="상품명:" />
              <Label fx:id="nameLabel" style="-fx-font-size: 16px;" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER_LEFT" spacing="5">
      <children>
              <Label style="-fx-font-weight: bold;" text="카테고리:" />
              <Label fx:id="categoryLabel" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER_LEFT" spacing="5">
      <children>
              <Label style="-fx-font-weight: bold;" text="판매가:" />
              <Label fx:id="priceLabel" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER_LEFT" spacing="5">
      <children>
              <Label style="-fx-font-weight: bold;" text="원가:" />
              <Label fx:id="costLabel" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER_LEFT" spacing="5">
      <children>
              <Label style="-fx-font-weight: bold;" text="수정일:" />
              <Label fx:id="modifiedDateLabel" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER" spacing="10">
      <children>
              <Button onAction="#handleUpdate" prefHeight="45.0" prefWidth="100.0" style="-fx-background-color: #4285f4; -fx-text-fill: white; -fx-background-radius: 4px; -fx-font-size: 16px; -fx-font-weight: bold;" text="수정하기" />
              <Button onAction="#handleDelete" prefHeight="45.0" prefWidth="100.0" style="-fx-background-color: #F05650; -fx-text-fill: white; -fx-background-radius: 4px; -fx-font-size: 16px; -fx-font-weight: bold;" text="삭제하기" />
      </children>
       </HBox>
   </children>
</VBox>
